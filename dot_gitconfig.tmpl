[user]
	name = Chris Long
	email = {{ .email }}
	signingkey = {{ .signingkey }}

[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	required = true
	clean = git-lfs clean -- %f
	process = git-lfs filter-process

[commit]
	gpgsign = true

[tag]
	gpgSign = true
