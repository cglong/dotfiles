[user]
	name = Chris Long
	email = {{ .email }}
{{ if .signingkey }}
	signingkey = {{ .signingkey }}

[commit]
	gpgsign = true

[tag]
	gpgSign = true
{{ else }}
[credential]
	helper = manager-core
{{ end }}

[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	required = true
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
