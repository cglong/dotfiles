[user]
	name = Chris Long
	email = {{ .email }}
{{- if .signingkey }}
	signingkey = {{ .signingkey }}
[commit]
	gpgsign = true
[tag]
	gpgSign = true
{{ else }}
[credential "helperselector"]
	selected = manager-core
{{ end -}}
[alias]
	fco = fuzzy-checkout
[branch]
	sort = -committerdate
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	light = false
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	required = true
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
